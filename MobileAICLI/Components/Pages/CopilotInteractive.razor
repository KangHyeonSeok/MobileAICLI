@code {
    private HubConnection? _hubConnection;
    private List<CopilotInteractiveMessage> _messages = new();
    private string _currentPrompt = string.Empty;
    private string? _sessionId;
    private bool _isConnected = false;
    private bool _isStreaming = false;
    private string _statusMessage = "Ï¥àÍ∏∞Ìôî Ï§ë...";
    private string _errorMessage = string.Empty;
    private bool _showFallbackButton = false;
    private ElementReference _messageContainer;

    protected override async Task OnInitializedAsync()
    {
        await InitializeHubConnection();
    }

    private async Task InitializeHubConnection()
    {
        try
        {
            _statusMessage = "Ïó∞Í≤∞ Ï§ë...";
            StateHasChanged();

            _hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/copilot-interactive"))
                .WithAutomaticReconnect()
                .Build();

            // Register event handlers
            _hubConnection.On<string>("ReceiveChunk", OnReceiveChunk);
            _hubConnection.On("ReceiveComplete", OnReceiveComplete);
            _hubConnection.On<string>("ReceiveError", OnReceiveError);
            _hubConnection.On<string>("ReceiveFallbackSuggestion", OnFallbackSuggestion);
            _hubConnection.On<string>("SessionReady", OnSessionReady);

            _hubConnection.Reconnecting += (error) =>
            {
                _statusMessage = "Ïû¨Ïó∞Í≤∞ Ï§ë...";
                _isConnected = false;
                StateHasChanged();
                return Task.CompletedTask;
            };

            _hubConnection.Reconnected += async (connectionId) =>
            {
                _statusMessage = "Ïû¨Ïó∞Í≤∞Îê®. ÏÑ∏ÏÖò Ïû¨ÏãúÏûë Ï§ë...";
                StateHasChanged();
                await StartSessionAsync();
            };

            _hubConnection.Closed += (error) =>
            {
                _statusMessage = "Ïó∞Í≤∞ ÎÅäÍπÄ";
                _isConnected = false;
                _errorMessage = error?.Message ?? "Connection closed";
                StateHasChanged();
                return Task.CompletedTask;
            };

            await _hubConnection.StartAsync();
            _isConnected = true;
            _statusMessage = "ÏÑ∏ÏÖò ÏãúÏûë Ï§ë...";
            StateHasChanged();

            await StartSessionAsync();
        }
        catch (Exception ex)
        {
            _statusMessage = "Ïó∞Í≤∞ Ïã§Ìå®";
            _errorMessage = $"Failed to connect: {ex.Message}";
            _isConnected = false;
            StateHasChanged();
        }
    }

    private async Task StartSessionAsync()
    {
        try
        {
            if (_hubConnection == null) return;

            _statusMessage = "ÏÑ∏ÏÖò ÏãúÏûë Ï§ë...";
            StateHasChanged();

            await _hubConnection.InvokeAsync("StartSession");
            // SessionReady will be called when the session is ready
        }
        catch (Exception ex)
        {
            _statusMessage = "ÏÑ∏ÏÖò ÏãúÏûë Ïã§Ìå®";
            _errorMessage = $"Failed to start session: {ex.Message}";
            _showFallbackButton = true;
            StateHasChanged();
        }
    }

    private async Task SendMessageAsync()
    {
        if (string.IsNullOrWhiteSpace(_currentPrompt) || _hubConnection == null || string.IsNullOrEmpty(_sessionId))
            return;

        try
        {
            // Add user message
            var userMessage = new CopilotInteractiveMessage
            {
                SessionId = _sessionId,
                Role = "user",
                Content = _currentPrompt,
                Timestamp = DateTime.Now
            };
            _messages.Add(userMessage);

            // Prepare streaming message
            var assistantMessage = new CopilotInteractiveMessage
            {
                SessionId = _sessionId,
                Role = "assistant",
                Content = string.Empty,
                Timestamp = DateTime.Now
            };
            _messages.Add(assistantMessage);

            var prompt = _currentPrompt;
            _currentPrompt = string.Empty;
            _isStreaming = true;
            _errorMessage = string.Empty;
            StateHasChanged();

            await ScrollToBottom();

            // Stream response
            await foreach (var chunk in _hubConnection.StreamAsync<string>("SendMessage", _sessionId, prompt))
            {
                assistantMessage.Content += chunk;
                StateHasChanged();
                await ScrollToBottom();
            }

            _isStreaming = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            _isStreaming = false;
            _errorMessage = $"Error sending message: {ex.Message}";
            _showFallbackButton = true;
            StateHasChanged();
        }
    }

    private async Task EndSessionAsync()
    {
        try
        {
            if (_hubConnection != null && !string.IsNullOrEmpty(_sessionId))
            {
                await _hubConnection.InvokeAsync("EndSession", _sessionId);
                _sessionId = null;
                _statusMessage = "ÏÑ∏ÏÖò Ï¢ÖÎ£åÎê®";
                _isConnected = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error ending session: {ex.Message}";
            StateHasChanged();
        }
    }

    private void OnSessionReady(string sessionId)
    {
        _sessionId = sessionId;
        _statusMessage = "Ïó∞Í≤∞Îê® - Ï§ÄÎπÑ ÏôÑÎ£å";
        _isConnected = true;
        _errorMessage = string.Empty;
        StateHasChanged();
    }

    private void OnReceiveChunk(string chunk)
    {
        if (_messages.Count > 0)
        {
            var lastMessage = _messages.Last();
            if (lastMessage.Role == "assistant")
            {
                lastMessage.Content += chunk;
                StateHasChanged();
                _ = ScrollToBottom();
            }
        }
    }

    private void OnReceiveComplete()
    {
        _isStreaming = false;
        StateHasChanged();
    }

    private void OnReceiveError(string error)
    {
        _isStreaming = false;
        _errorMessage = $"Ïò§Î•ò: {error}";
        StateHasChanged();
    }

    private void OnFallbackSuggestion(string message)
    {
        _errorMessage = message;
        _showFallbackButton = true;
        StateHasChanged();
    }

    private string GetStatusClass()
    {
        if (_isConnected && !string.IsNullOrEmpty(_sessionId))
            return "status-connected";
        else if (_isConnected)
            return "status-connecting";
        else
            return "status-error";
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("copilotInteractive.scrollToBottomSmooth", "message-container");
        }
        catch (JSException jsEx)
        {
            // JSInterop might not be ready yet or function not found
            Logger.LogDebug(jsEx, "JavaScript interop error during scroll");
        }
        catch (JSDisconnectedException)
        {
            // Circuit disconnected, ignore
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Unexpected error during scroll");
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        // Send on Enter (without Shift) - no preventDefault in Blazor
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessageAsync();
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection != null)
        {
            try
            {
                if (!string.IsNullOrEmpty(_sessionId))
                {
                    await _hubConnection.InvokeAsync("EndSession", _sessionId);
                }
                await _hubConnection.DisposeAsync();
            }
            catch (Exception ex)
            {
                // Log disposal errors but don't throw
                Logger.LogDebug(ex, "Error during hub connection disposal");
            }
        }
    }
}
