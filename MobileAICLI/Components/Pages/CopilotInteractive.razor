@page "/copilot/interactive"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.SignalR.Client
@using MobileAICLI.Models
@using Microsoft.JSInterop
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ILogger<CopilotInteractive> Logger
@implements IAsyncDisposable
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Copilot Interactive Chat</PageTitle>

<div class="copilot-interactive-container d-flex flex-column">
    @* ÏÉÅÌÉú Î∞∞ÎÑà *@
    <div class="status-banner border-bottom bg-light p-2">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <span class="status-indicator @GetStatusClass()"></span>
                <small class="text-muted">@_statusMessage</small>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-xs btn-outline-danger" 
                        @onclick="EndSessionAsync" 
                        disabled="@(!_isConnected || string.IsNullOrEmpty(_sessionId))"
                        title="End Session">
                    Ï¢ÖÎ£å
                </button>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger alert-sm mt-2 mb-0" role="alert">
                @_errorMessage
                @if (_showFallbackButton)
                {
                    <div class="mt-2">
                        <a href="/copilot" class="btn btn-sm btn-primary">Programmatic Î™®ÎìúÎ°ú Ïù¥Îèô</a>
                    </div>
                }
            </div>
        }
    </div>

    @* Î©îÏãúÏßÄ ÏòÅÏó≠ *@
    <div id="message-container" class="message-area flex-grow-1 overflow-auto p-3" @ref="_messageContainer">
        @if (_messages.Count == 0)
        {
            <div class="text-center text-muted py-5">
                <h5>ü§ñ Copilot Interactive Chat</h5>
                <p>Start a conversation with Copilot. Your context will be maintained throughout the session.</p>
                <p><small>Example: "Explain the main.cs file" ‚Üí "What design patterns does it use?"</small></p>
            </div>
        }
        else
        {
            @foreach (var message in _messages)
            {
                <div class="message mb-3 @(message.Role == "user" ? "message-user" : "message-assistant")">
                    <div class="message-header mb-1">
                        <small class="text-muted">
                            @(message.Role == "user" ? "You" : "Copilot") ‚Ä¢ @message.Timestamp.ToString("HH:mm:ss")
                        </small>
                    </div>
                    <div class="message-content p-3 rounded @(message.Role == "user" ? "bg-primary text-white" : "bg-light")">
                        @if (_isStreaming && message == _messages.Last() && message.Role == "assistant")
                        {
                            <span style="white-space: pre-wrap;">@message.Content</span>
                            <span class="typing-indicator">‚ñã</span>
                        }
                        else
                        {
                            <pre class="mb-0 @(message.Role == "user" ? "text-white" : "")" style="white-space: pre-wrap; word-wrap: break-word;">@message.Content</pre>
                        }
                    </div>
                </div>
            }
        }
    </div>

    @* ÏûÖÎ†• ÏòÅÏó≠ *@
    <div class="input-area border-top p-2">
        <div class="input-group gap-2">
            <textarea class="form-control" 
                      rows="2" 
                      @bind="_currentPrompt" 
                      @bind:event="oninput"
                      @onkeydown="HandleKeyDown"
                      placeholder="Ask Copilot..."
                      disabled="@(!_isConnected || _isStreaming || string.IsNullOrEmpty(_sessionId))"></textarea>
            <button class="btn btn-primary btn-send" 
                    @onclick="SendMessageAsync" 
                    disabled="@(!_isConnected || _isStreaming || string.IsNullOrWhiteSpace(_currentPrompt) || string.IsNullOrEmpty(_sessionId))"
                    aria-label="Send">
                @if (_isStreaming)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-label="Sending message"></span>
                }
                else
                {
                    <span>‚úàÔ∏è</span>
                }
            </button>
        </div>
    </div>
</div>

<style>
