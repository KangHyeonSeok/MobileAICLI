        transition: background 0.15s;
    }

    .branch-item:hover {
        background: var(--bs-light);
    }

    .branch-item.current {
        background: var(--bs-success-bg-subtle);
    }

    .branch-item.selected-merge {
        background: var(--bs-primary-bg-subtle);
        border-left: 3px solid var(--bs-primary);
    }

    .branch-info {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .branch-name {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .branch-time {
        font-size: 0.85rem;
        color: var(--bs-secondary);
    }

    .branch-modal-footer {
        padding: 12px;
        border-top: 1px solid var(--bs-border-color);
    }

    .merge-btn {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .loading, .no-branches {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px;
        color: var(--bs-secondary);
        gap: 12px;
    }

    .no-branches .bi {
        font-size: 2rem;
    }

    .error-toast {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--bs-danger);
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        z-index: 1001;
        animation: fadeInOut 3s ease;
    }

    @@keyframes fadeInOut {
        0%, 100% { opacity: 0; }
        10%, 90% { opacity: 1; }
    }

    /* Mobile styles */
    @@media (max-width: 768px) {
        .branch-modal-overlay {
            padding: 0;
            align-items: flex-end;
        }

        .branch-modal {
            max-width: 100%;
            max-height: 80vh;
            border-radius: 16px 16px 0 0;
        }
    }
</style>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string? CurrentBranch { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<string> OnBranchChanged { get; set; }

    [Parameter]
    public HubConnection? HubConnection { get; set; }

    private List<GitBranchInfo> allBranches = new();
    private string filterText = "";
    private string activeTab = "branches";
    private bool isLoading = false;
    private bool showCreateInput = false;
    private string newBranchName = "";
    private string? selectedMergeBranch;
    private string? errorMessage;

    private IEnumerable<GitBranchInfo> filteredBranches => 
        string.IsNullOrWhiteSpace(filterText) 
            ? allBranches 
            : allBranches.Where(b => b.Name.Contains(filterText, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<GitBranchInfo> defaultBranches => 
        filteredBranches.Where(b => b.IsCurrentBranch || b.Name == "main" || b.Name == "master");

    private IEnumerable<GitBranchInfo> otherBranches => 
        filteredBranches.Except(defaultBranches);

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && allBranches.Count == 0)
        {
            await LoadBranches();
        }
    }

    private async Task LoadBranches()
    {
        if (HubConnection is null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            allBranches = await HubConnection.InvokeAsync<List<GitBranchInfo>>("GetBranches");
        }
        catch (Exception ex)
        {
            ShowError($"Error loading branches: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CheckoutBranch(GitBranchInfo branch)
    {
        if (branch.IsCurrentBranch || HubConnection is null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            var result = await HubConnection.InvokeAsync<(bool Success, string Message)>("CheckoutBranch", branch.Name);

            if (result.Success)
            {
                await OnBranchChanged.InvokeAsync(branch.Name);
            }
            else
            {
                ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectOrCheckout(GitBranchInfo branch)
    {
        if (branch.IsCurrentBranch) return;

        // Toggle selection for merge
        if (selectedMergeBranch == branch.Name)
        {
            selectedMergeBranch = null;
        }
        else
        {
            selectedMergeBranch = branch.Name;
        }
    }

    private void ShowCreateBranch()
    {
        showCreateInput = true;
        newBranchName = "";
    }

    private void CancelCreate()
    {
        showCreateInput = false;
        newBranchName = "";
    }

    private async Task HandleCreateKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(newBranchName))
        {
            await CreateBranch();
        }
        else if (e.Key == "Escape")
        {
            CancelCreate();
        }
    }

    private async Task CreateBranch()
    {
        if (HubConnection is null || string.IsNullOrWhiteSpace(newBranchName)) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            var result = await HubConnection.InvokeAsync<(bool Success, string Message)>("CreateBranch", newBranchName);

            if (result.Success)
            {
                showCreateInput = false;
                newBranchName = "";
                await OnBranchChanged.InvokeAsync(newBranchName);
            }
            else
            {
                ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task MergeBranch()
    {
        if (HubConnection is null || string.IsNullOrEmpty(selectedMergeBranch)) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            var result = await HubConnection.InvokeAsync<(bool Success, string Message)>("MergeBranch", selectedMergeBranch);

            if (result.Success)
            {
                selectedMergeBranch = null;
                await LoadBranches();
            }
            else
            {
                ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task FetchOrigin()
    {
        if (HubConnection is null) return;

        try
        {
            isLoading = true;
            StateHasChanged();

            var result = await HubConnection.InvokeAsync<(bool Success, string Message)>("Fetch");

            if (result.Success)
            {
                await LoadBranches();
            }
            else
            {
                ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Close()
    {
        selectedMergeBranch = null;
        showCreateInput = false;
        filterText = "";
        OnClose.InvokeAsync();
    }

    private void ShowError(string message)
    {
        errorMessage = message;
        StateHasChanged();

        _ = Task.Run(async () =>
        {
            await Task.Delay(3000);
            errorMessage = null;
            await InvokeAsync(StateHasChanged);
        });
    }

    private static string FormatRelativeTime(DateTime? dateTime)
    {
        if (dateTime == null) return "";

        var diff = DateTime.Now - dateTime.Value;

        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} min ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} hours ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays} days ago";
        if (diff.TotalDays < 365) return $"{(int)(diff.TotalDays / 30)} months ago";
        
        return $"{(int)(diff.TotalDays / 365)} years ago";
    }
}
