@using Microsoft.AspNetCore.SignalR.Client
@using MobileAICLI.Models

@if (IsVisible)
{
    <div class="branch-modal-overlay" @onclick="Close">
        <div class="branch-modal" @onclick:stopPropagation="true">
            <div class="branch-modal-header">
                <div class="current-branch-info">
                    <span class="bi bi-git"></span>
                    <span>Current branch</span>
                    <strong>@CurrentBranch</strong>
                </div>
                <button class="btn btn-sm btn-outline-secondary" @onclick="FetchOrigin" disabled="@isLoading">
                    <span class="bi bi-cloud-download"></span>
                    Fetch origin
                </button>
            </div>

            <div class="branch-tabs">
                <button class="tab @(activeTab == "branches" ? "active" : "")" @onclick='() => activeTab = "branches"'>
                    Branches
                </button>
                <button class="tab disabled" disabled title="Coming soon">
                    Pull requests
                </button>
            </div>

            <div class="branch-filter">
                <div class="filter-input">
                    <span class="bi bi-search"></span>
                    <input type="text" placeholder="Filter branches..." 
                           @bind="filterText" 
                           @bind:event="oninput" />
                </div>
                <button class="btn btn-sm btn-success" @onclick="ShowCreateBranch">
                    <span class="bi bi-plus-lg"></span>
                    New branch
                </button>
            </div>

            @if (showCreateInput)
            {
                <div class="create-branch-section">
                    <input type="text" class="form-control" 
                           placeholder="Branch name"
                           @bind="newBranchName"
                           @onkeydown="HandleCreateKeyDown" />
                    <button class="btn btn-sm btn-primary" @onclick="CreateBranch" disabled="@(string.IsNullOrWhiteSpace(newBranchName))">
                        Create
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" @onclick="CancelCreate">
                        Cancel
                    </button>
                </div>
            }

            <div class="branch-list">
                @if (isLoading)
                {
                    <div class="loading">
                        <div class="spinner-border spinner-border-sm"></div>
                        <span>Loading branches...</span>
                    </div>
                }
                else
                {
                    @if (defaultBranches.Any())
                    {
                        <div class="branch-section">
                            <div class="section-header">Default branch</div>
                            @foreach (var branch in defaultBranches)
                            {
                                <div class="branch-item @(branch.IsCurrentBranch ? "current" : "")"
                                     @onclick="() => CheckoutBranch(branch)">
                                    <div class="branch-info">
                                        @if (branch.IsCurrentBranch)
                                        {
                                            <span class="bi bi-check text-success"></span>
                                        }
                                        else if (branch.IsRemote)
                                        {
                                            <span class="bi bi-cloud"></span>
                                        }
                                        else
                                        {
                                            <span class="bi bi-git"></span>
                                        }
                                        <span class="branch-name">@branch.Name</span>
                                    </div>
                                    <div class="branch-time">
                                        @FormatRelativeTime(branch.LastCommitTime)
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (otherBranches.Any())
                    {
                        <div class="branch-section">
                            <div class="section-header">Other branches</div>
                            @foreach (var branch in otherBranches)
                            {
                                <div class="branch-item @(branch.IsCurrentBranch ? "current" : "") @(selectedMergeBranch == branch.Name ? "selected-merge" : "")"
                                     @onclick="() => SelectOrCheckout(branch)">
                                    <div class="branch-info">
                                        @if (branch.IsCurrentBranch)
                                        {
                                            <span class="bi bi-check text-success"></span>
                                        }
                                        else if (branch.IsRemote)
                                        {
                                            <span class="bi bi-cloud"></span>
                                        }
                                        else
                                        {
                                            <span class="bi bi-git"></span>
                                        }
                                        <span class="branch-name">@branch.Name</span>
                                    </div>
                                    <div class="branch-time">
                                        @FormatRelativeTime(branch.LastCommitTime)
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (!defaultBranches.Any() && !otherBranches.Any())
                    {
                        <div class="no-branches">
                            <span class="bi bi-git"></span>
                            <p>No branches found</p>
                        </div>
                    }
                }
            </div>

            <div class="branch-modal-footer">
                <button class="btn btn-outline-primary merge-btn" 
                        @onclick="MergeBranch"
                        disabled="@(string.IsNullOrEmpty(selectedMergeBranch))">
                    <span class="bi bi-git"></span>
                    @if (!string.IsNullOrEmpty(selectedMergeBranch))
                    {
                        <span>Merge @selectedMergeBranch into @CurrentBranch</span>
                    }
                    else
                    {
                        <span>Choose a branch to merge into @CurrentBranch</span>
                    }
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-toast">
            @errorMessage
        </div>
    }
}

<style>
