@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="page">
    <button class="sidebar-toggle-btn" @onclick="ToggleSidebar" title="메뉴">
        <span class="toggle-icon"></span>
    </button>

    <div class="sidebar @(sidebarVisible ? "visible" : "")">
        <NavMenu OnNavigate="CloseSidebar" />
    </div>

    @if (sidebarVisible)
    {
        <div class="sidebar-overlay" @onclick="CloseSidebar"></div>
    }

    <main>
        @* Top bar - conditionally rendered based on current page *@
        @if (IsSettingsPage())
        {
            <div class="top-bar">
                @* Settings page shows authentication info *@
                <AuthorizeView>
                    <Authorized>
                        <div class="auth-status">
                            <i class="bi bi-shield-check text-success"></i>
                            <span class="ms-2">Authenticated</span>
                            <a href="/logout" class="btn btn-sm btn-outline-secondary ms-3">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="auth-status">
                            <i class="bi bi-shield-x text-warning"></i>
                            <span class="ms-2">Not authenticated</span>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        }
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool sidebarVisible = false;

    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    private void ToggleSidebar()
    {
        sidebarVisible = !sidebarVisible;
    }

    private void CloseSidebar()
    {
        sidebarVisible = false;
    }

    private bool IsSettingsPage()
    {
        var path = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        return path.StartsWith("settings", StringComparison.OrdinalIgnoreCase);
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
