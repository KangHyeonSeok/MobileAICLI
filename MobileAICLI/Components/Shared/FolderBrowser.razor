@using MobileAICLI.Models
@using MobileAICLI.Services
@inject FileService FileService

<div class="modal fade @(IsVisible ? "show" : "")"
     style="display: @(IsVisible ? "block" : "none");"
     tabindex="-1"
     aria-labelledby="folderBrowserTitle"
     aria-modal="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="folderBrowserTitle">üìÅ ÏûëÏóÖ ÎîîÎ†âÌÜ†Î¶¨ ÏÑ†ÌÉù</h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                @if (isLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading directories...</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> @errorMessage
                    </div>
                    <button class="btn btn-secondary" @onclick="LoadDefaultPath">
                        Go to Documents
                    </button>
                }
                else
                {
                    @* Current path breadcrumb *@
                    <div class="mb-3">
                        <label class="form-label fw-bold">ÌòÑÏû¨ Í≤ΩÎ°ú:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@currentPath" readonly>
                            <button class="btn btn-outline-secondary" @onclick="CopyPath" title="Í≤ΩÎ°ú Î≥µÏÇ¨" disabled>
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                        <small class="text-muted">Í≤ΩÎ°ú Î≥µÏÇ¨ Í∏∞Îä•ÏùÄ Ìñ•ÌõÑ Íµ¨ÌòÑ ÏòàÏ†ï</small>
                    </div>

                    @* Parent directory button *@
                    @if (!string.IsNullOrEmpty(parentPath))
                    {
                        <div class="mb-3">
                            <button class="btn btn-outline-primary w-100 text-start" @onclick="GoToParent">
                                <i class="bi bi-arrow-up"></i> ÏÉÅÏúÑ Ìè¥ÎçîÎ°ú Ïù¥Îèô
                            </button>
                        </div>
                    }

                    @* Folder list *@
                    <div class="folder-list" style="max-height: 400px; overflow-y: auto;">
                        @if (folders.Count == 0)
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-folder-x" style="font-size: 2rem;"></i>
                                <p class="mt-2">Ïù¥ ÎîîÎ†âÌÜ†Î¶¨ÏóêÎäî ÌïòÏúÑ Ìè¥ÎçîÍ∞Ä ÏóÜÏäµÎãàÎã§.</p>
                            </div>
                        }
                        else
                        {
                            <div class="list-group">
                                @foreach (var folder in folders)
                                {
                                    <button type="button" 
                                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(!folder.IsAccessible ? "disabled" : "")"
                                            @onclick="() => SelectFolder(folder)"
                                            disabled="@(!folder.IsAccessible)">
                                        <span>
                                            <i class="bi @(folder.IsAccessible ? "bi-folder-fill" : "bi-folder-x") me-2"></i>
                                            @folder.Name
                                        </span>
                                        @if (!folder.IsAccessible)
                                        {
                                            <small class="text-muted">Ï†ëÍ∑º Î∂àÍ∞Ä</small>
                                        }
                                        else
                                        {
                                            <i class="bi bi-chevron-right"></i>
                                        }
                                    </button>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Ï∑®ÏÜå</button>
                <button type="button" class="btn btn-primary" @onclick="Confirm" disabled="@(string.IsNullOrEmpty(currentPath))">
                    Ïù¥ Í≤ΩÎ°ú ÏÑ†ÌÉù
                </button>
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string? InitialPath { get; set; }

    [Parameter]
    public EventCallback<string> OnPathSelected { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private bool isLoading = false;
    private string? currentPath;
    private string? parentPath;
    private List<FolderItem> folders = new();
    private string? errorMessage;
    private string? lastInitialPath;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible)
        {
            // Reload if first load or InitialPath has changed
            if (string.IsNullOrEmpty(currentPath) || lastInitialPath != InitialPath)
            {
                await LoadPath(InitialPath);
                lastInitialPath = InitialPath;
            }
        }
    }

    private async Task LoadPath(string? path = null)
    {
        const int LoadingDelayMs = 100;
        
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        await Task.Delay(LoadingDelayMs); // Small delay to show loading state

        var result = FileService.BrowseDirectories(path);
        
        if (result.Success)
        {
            currentPath = result.CurrentPath;
            parentPath = result.ParentPath;
            folders = result.Folders;
        }
        else
        {
            errorMessage = result.Error;
        }

        isLoading = false;
        StateHasChanged();
    }

    private async Task LoadDefaultPath()
    {
        await LoadPath(null);
    }

    private async Task GoToParent()
    {
        if (!string.IsNullOrEmpty(parentPath))
        {
            await LoadPath(parentPath);
        }
    }

    private async Task SelectFolder(FolderItem folder)
    {
        if (folder.IsAccessible)
        {
            await LoadPath(folder.FullPath);
        }
    }

    // Note: Copy functionality would require IJSRuntime injection
    // Disabled for now to avoid incomplete implementation
    private void CopyPath()
    {
        // TODO: Implement clipboard copy using IJSRuntime
        // await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", currentPath);
    }

    private async Task Confirm()
    {
        if (!string.IsNullOrEmpty(currentPath))
        {
            await OnPathSelected.InvokeAsync(currentPath);
        }
    }

    private async Task Cancel()
    {
        currentPath = null;
        parentPath = null;
        folders.Clear();
        errorMessage = null;
        await OnCancel.InvokeAsync();
    }
}
